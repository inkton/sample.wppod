<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:WPPodUser"
             x:Class="WPPodUser.LoginView" 
             Title="Login">
    <StackLayout VerticalOptions="StartAndExpand" Padding="100,25,100,25">
            <Label Text="Email" />
            <Entry x:Name="EmailEntry" Placeholder="email" Text="john@wppod.com" />
            <Label Text="Pin Number" />
            <Entry x:Name="PinEntry" Keyboard="Numeric" IsPassword="true" Text="8888" />
            <Button Text="Login" Clicked="OnLoginButtonClicked" />
            <Label x:Name="messageLabel" />
     </StackLayout>
</ContentPage>